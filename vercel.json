{
  "version": 2,
  "installCommand": "npm install",
  "buildCommand": "npm run build -w frontend",
  "builds": [
    { "src": "api/**/*.ts", "use": "@vercel/node@3" },
    { "src": "frontend/build/**", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/$1" },
    { "src": "/(.*)", "dest": "/frontend/build/$1" }
  ]
}
